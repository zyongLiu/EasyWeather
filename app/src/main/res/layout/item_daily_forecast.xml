<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_forecast_data"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tv_forecast_data"
        android:id="@+id/tv_forecast_tem"
        android:layout_alignParentLeft="true"
        android:text="20℃"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/tv_forecast_tem"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="32dp">
        <ImageView
            android:id="@+id/iv_forecast_cloud"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="match_parent" />

        <TextView
            android:layout_toRightOf="@id/iv_forecast_cloud"
            android:gravity="center_vertical"
            android:id="@+id/tv_forecast_cloud"
            android:textSize="12sp"
            android:layout_below="@id/tv_now_tem"
            android:text="多云 26℃~20℃"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>